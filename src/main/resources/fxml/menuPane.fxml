<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pl.n2god.mp3player.main_mp3_player.controller.MenuController">
            <MenuBar>
                <menus>
                    <Menu mnemonicParsing="false" text="File">
                        <items>
                            <MenuItem fx:id="fileMenuItem" mnemonicParsing="false" text="Open Mp3 File"/>
                            <MenuItem fx:id="dirMenuItem" mnemonicParsing="false" text="Open directory"/>
                            <MenuItem fx:id="exitMenuItem" mnemonicParsing="false" text="Close"/>
                        </items>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Help">
                        <items>
                            <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="About"/>
                        </items>
                    </Menu>
                </menus>
            </MenuBar>
</AnchorPane>
